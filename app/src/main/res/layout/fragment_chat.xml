<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment">

    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/horizontalContainer"
        app:layout_constraintTop_toTopOf="@id/constraintLayoutLayout">

        <TextView
            android:id="@+id/chatOutputTextView"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="@id/messageContainer"
            app:layout_constraintTop_toTopOf="@id/messageContainer" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/horizontalContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayoutLayout"
        app:layout_constraintTop_toBottomOf="@+id/messageContainer">

        <EditText
            android:id="@+id/chatInputEditText"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_enter_message"

            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="@id/horizontalContainer"
            app:layout_constraintLeft_toLeftOf="@id/horizontalContainer" />


        <ImageButton
            android:id="@+id/chatSendButton"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/send_message"
            android:src="@drawable/ic_menu_send" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>